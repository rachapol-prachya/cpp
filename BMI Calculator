#include <iostream>
#include <cmath>

using namespace std;

int main() {
    // Helper - Kritsada

    // Create float : weight, height, bmi
    float weight, height, bmi;
    
    cout << "BMI Calculator" << endl; // Name Start
    
    // Asking for height
    while (true) { // Loop
        cout << "Enter your Height (cm): ";
        cin >> height;

        if (cin.fail() || height <= 0) {
            // Check if input failed (non-numeric) OR weight is less than or equal to 0
            cin.clear(); // Clear the error to use it again
            cin.ignore(1000, '\n');
            cout << "Invalid input. Please try again.\n";
        } else {
            // exit the loop
            break;
        }
    }
    
    // Asking for weight
    while (true) { // Loop
        cout << "Enter your Weight (kg): ";
        cin >> weight;

        if (cin.fail() || weight <= 0) {
            // Check if input failed (non-numeric) OR weight is less than or equal to 0
            cin.clear(); // Clear the error to use it again
            cin.ignore(1000, '\n');
            cout << "Invalid input. Please try again.\n";
        } else {
            // exit the loop
            break;
        }
    }
    
    bmi = weight / pow((height / 100), 2);
    cout << bmi << endl;
    
    // Determine BMI category
    if (bmi < 18.5) {
        cout << "BMI Category: Underweight" << endl;
    } else if (bmi >= 18.5 && bmi < 24.9) {
        cout << "BMI Category: Normal weight" << endl;
    } else if (bmi >= 25 && bmi < 29.9) {
        cout << "BMI Category: Overweight" << endl;
    } else {
        cout << "BMI Category: Obesity" << endl;
    }

    return 0;
}
